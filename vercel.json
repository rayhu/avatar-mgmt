{
  "version": 2,
  "name": "avatar-mgmt",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api-server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api-server/index.ts"
    },
    {
      "source": "/health",
      "destination": "/api-server/index.ts"
    }
  ],
  "regions": ["hkg1"]
}
