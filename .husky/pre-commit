#!/usr/bin/env sh
# Stop on first failure
set -e

echo "ğŸ” Running pre-commit checks..."

# Check if we're in the right directory
if [ ! -f "package.json" ]; then
    echo "âŒ Error: package.json not found. Please run this from the project root."
    exit 1
fi

# Check if frontend directory exists
if [ ! -d "frontend" ]; then
    echo "âŒ Error: frontend directory not found."
    exit 1
fi

# Run lint-staged for staged files
echo "ğŸ“ Running lint-staged..."
npx --no-install lint-staged

# Run frontend checks
echo "ğŸ”§ Running frontend checks..."
cd frontend

# Check if yarn is available
if ! command -v yarn &> /dev/null; then
    echo "âŒ Error: yarn not found. Please install yarn first."
    exit 1
fi

# Check if frontend dependencies are installed
if [ ! -d "node_modules" ]; then
    echo "âš ï¸  Warning: frontend node_modules not found. Installing dependencies..."
    yarn install
fi

# Check if the check script exists
if ! yarn run --silent check &> /dev/null; then
    echo "âš ï¸  Warning: 'check' script not found, running lint and type-check separately..."
    echo "âœ… Running frontend lint..."
    yarn lint || {
        echo "âŒ Frontend lint failed"
        exit 1
    }
    
    echo "âœ… Running frontend type check..."
    yarn type-check || {
        echo "âŒ Frontend type check failed"
        exit 1
    }
else
    # Run frontend checks using the check script
    echo "âœ… Running frontend check..."
    yarn run check || {
        echo "âŒ Frontend check failed"
        exit 1
    }
fi

echo "ğŸŒ Running i18n check..."
yarn i18n:check || {
    echo "âŒ i18n check failed"
    exit 1
}

echo "âœ… All pre-commit checks passed!"
