# 前端环境变量配置
# 复制此文件为 .env.stage.frontend 并修改相应的值

# API 服务地址
VITE_API_BASE_URL=http://localhost:3000

# Directus CMS 地址
VITE_DIRECTUS_BASE_URL=http://localhost:8055

# 应用环境
VITE_APP_ENV=staging

# 应用版本 (会自动从 IMAGE_TAG 环境变量获取)
VITE_APP_VERSION=latest

# 其他前端配置
VITE_APP_TITLE=Avatar Management System
VITE_APP_DESCRIPTION=Avatar Management and Animation System

# 功能开关
VITE_FEATURE_ANIMATION=true
VITE_FEATURE_UPLOAD=true
VITE_FEATURE_SHARING=true

# 调试模式
VITE_DEBUG=false
