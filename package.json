{
  "name": "avatar-mgmt",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "engines": {
    "node": "^22.16.0",
    "yarn": "^1.22.0"
  },
  "lint-staged": {
    "frontend/**/*.{js,ts,vue}": [
      "cd frontend && yarn lint --fix",
      "cd frontend && yarn format"
    ],
    "frontend/**/*.{json,md,yml,yaml}": [
      "cd frontend && yarn format"
    ],
    "api-server/**/*.{js,ts}": [
      "cd api-server && yarn lint --fix",
      "cd api-server && yarn format"
    ],
    "api-server/**/*.{json,md,yml,yaml}": [
      "cd api-server && yarn format"
    ],
    "*.{json,md,yml,yaml}": [
      "yarn format"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3"
  },
  "volta": {
    "node": "22.16.0",
    "yarn": "1.22.22"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
