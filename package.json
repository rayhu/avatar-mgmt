      "cd frontend && yarn format"
    ]
  },
  "devDependencies": {
    "@vercel/node": "^3.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0"
  },
  "volta": {
    "node": "22.16.0",
    "yarn": "1.22.22"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
