{
  "name": "avatar-mgmt",
  "private": true,
  "scripts": {
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": "1.x"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "frontend",
    "api-server"
  ],
  "lint-staged": {
